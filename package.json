{
  "name": "vuu-ui",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Steve Heron <steve@heswell.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "modular": {
    "type": "root"
  },
  "scripts": {
    "start": "modular start app",
    "build": "modular build app",
    "build:all": "modular build utils && modular build data-store && modular build data-source && modular build data-remote && modular build datagrid && modular build filter && rollup --config packages/remote-worker/rollup.config.js && modular build app",
    "build:worker": "rollup --config packages/remote-worker/rollup.config.js",
    "build:data-store-worker": "rollup --config packages/data-store-worker/rollup.config.js",
    "test": "modular test",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "prettier": "prettier --write .",
    "storybook": "start-storybook -p 6005 -s ./stories/public",
    "build-storybook": "build-storybook"
  },
  "eslintConfig": {
    "extends": "modular-app"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 80,
    "proseWrap": "always"
  },
  "dependencies": {
    "@heswell/layout": "3.4.5",
    "@heswell/popup": "2.1.15",
    "@heswell/ui-controls": "2.0.25",
    "@testing-library/dom": "^7.29.4",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.7.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.29",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "eslint": "^7.20.0",
    "eslint-config-modular-app": "^0.4.2",
    "modular-scripts": "0.9.10",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "typescript": "^4.1.2"
  },
  "devDependencies": {
    "@storybook/addon-actions": "~6.1.18",
    "@storybook/addon-essentials": "~6.1.18",
    "@storybook/addon-links": "~6.1.18",
    "@storybook/node-logger": "~6.1.18",
    "@storybook/react": "~6.1.18"
  }
}
